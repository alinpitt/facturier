{# app/Resources/views/default/index.html.twig #}
{% extends 'base.html.twig' %}

{% block submenu %}
    {# mostenire linkuri din layoutul de baza #}

    {{ parent() }}

    <h5>Produse</h5>
    <ul class="nav nav-sidebar">
        <li><a href="#">Lista Produse</a></li>
        <li><a href="#">Adauga Produse</a></li>
        <li><a href="#">Edit Produse</a></li>

    </ul>
{% endblock %}

{% block body %}
    <h3>Exemplu - afisare date in tabel</h3>
    <div class="table-responsive">
        <table class="table table-hover records_list">
            <thead>
            <tr>
                {% for val in entities[0] %}
                    <th>{{ val }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    {% for val in entity %}
                        <td>{{ val }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}